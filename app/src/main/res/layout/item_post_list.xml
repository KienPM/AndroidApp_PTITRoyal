<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_small">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/post_avatar"
            android:layout_height="@dimen/post_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_toEndOf="@+id/imgAvatar"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsername"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_toEndOf="@+id/imgAvatar"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimarySecondaryText" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryText" />

    <ImageView
        android:id="@+id/imgContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_image"
        android:scaleType="fitCenter"
        android:src="@mipmap/splash_screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_small">

        <ImageView
            android:layout_width="@dimen/post_like_icon"
            android:layout_height="@dimen/post_like_icon"
            android:src="@mipmap/ic_like" />

        <TextView
            android:id="@+id/tvNumOfLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small"
            android:text="5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small"
            android:text="@string/like"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimarySecondaryText" />

        <ImageView
            android:layout_width="@dimen/post_like_icon"
            android:layout_height="@dimen/post_like_icon"
            android:layout_marginLeft="@dimen/space_large"
            android:src="@android:drawable/sym_action_chat" />

        <TextView
            android:id="@+id/tvNumOfCmts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small"
            android:text="5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small"
            android:text="@string/comment"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimarySecondaryText" />
    </LinearLayout>

</LinearLayout>
